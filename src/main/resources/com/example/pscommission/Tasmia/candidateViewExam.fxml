<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pscommission.Tasmia.candidateViewController">
    <children>
        <Label layoutX="400.0" layoutY="30.0" text="View Exams">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="80.0" text="Search Exams:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="searchexamstextfield" layoutX="150.0" layoutY="75.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter exam name or category" />
        <Button layoutX="470.0" layoutY="75.0" mnemonicParsing="false" onAction="#searchbuttononaction" prefHeight="30.0" prefWidth="80.0" text="Search" />
        <TableView fx:id="viewexamstableview" layoutX="50.0" layoutY="130.0" prefHeight="350.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="examnamecol" prefWidth="250.0" text="Exam Name" />
                <TableColumn fx:id="categorycol" prefWidth="120.0" text="Category" />
                <TableColumn fx:id="eligibilitycol" prefWidth="100.0" text="Eligibility" />
                <TableColumn fx:id="applicationdeadlinecol" prefWidth="120.0" text="Application Deadline" />
                <TableColumn fx:id="examdatecol" prefWidth="100.0" text="Exam Date" />
                <TableColumn fx:id="actionscol" prefWidth="130.0" text="Actions" />
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="500.0" mnemonicParsing="false" onAction="#refreshlistbuttononaction" prefHeight="35.0" prefWidth="120.0" text="Refresh List" />
        <Button layoutX="190.0" layoutY="500.0" mnemonicParsing="false" onAction="#filterbycategorybuttononaction" prefHeight="35.0" prefWidth="120.0" text="Filter by Category" />
        <Button layoutX="330.0" layoutY="500.0" mnemonicParsing="false" onAction="#viewdetailsbuttononaction" prefHeight="35.0" prefWidth="120.0" text="View Details" />
    </children>
</AnchorPane>
