            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="activeadminsessionstableview" layoutX="50.0" layoutY="320.0" prefHeight="150.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="adminnamecol" prefWidth="200.0" text="Admin Name" />
                <TableColumn fx:id="logintimecol" prefWidth="150.0" text="Login Time" />
                <TableColumn fx:id="ipaddresscol" prefWidth="120.0" text="IP Address" />
                <TableColumn fx:id="lastactivitycol" prefWidth="150.0" text="Last Activity" />
                <TableColumn fx:id="statuscol" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="actionscol" prefWidth="100.0" text="Actions" />
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="490.0" mnemonicParsing="false" onAction="#viewauditlogbuttononaction" prefHeight="35.0" prefWidth="120.0" text="View Audit Log" />
