        </Label>
        <Label layoutX="50.0" layoutY="80.0" text="Admin Profile Management:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="110.0" text="Full Name:" />
        <TextField fx:id="nametextfield" layoutX="130.0" layoutY="105.0" prefHeight="30.0" prefWidth="200.0" />
        <Label layoutX="350.0" layoutY="110.0" text="Employee ID:" />
        <TextField fx:id="employeeidtextfield" layoutX="440.0" layoutY="105.0" prefHeight="30.0" prefWidth="150.0" />
        <Label layoutX="50.0" layoutY="150.0" text="Email:" />
