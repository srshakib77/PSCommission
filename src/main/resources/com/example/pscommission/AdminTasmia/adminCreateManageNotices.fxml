            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="existingnoticestableview" layoutX="50.0" layoutY="350.0" prefHeight="150.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="noticetitlecol" prefWidth="250.0" text="Notice Title" />
                <TableColumn fx:id="categorycol" prefWidth="100.0" text="Category" />
                <TableColumn fx:id="publishdatecol" prefWidth="100.0" text="Publish Date" />
                <TableColumn fx:id="expirydatecol" prefWidth="100.0" text="Expiry Date" />
                <TableColumn fx:id="statuscol" prefWidth="80.0" text="Status" />
                <TableColumn fx:id="prioritycol" prefWidth="90.0" text="Priority" />
                <TableColumn fx:id="actionscol" prefWidth="100.0" text="Actions" />
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="510.0" mnemonicParsing="false" onAction="#editnoticebuttononaction" prefHeight="30.0" prefWidth="100.0" text="Edit Notice" />
        <Button layoutX="170.0" layoutY="510.0" mnemonicParsing="false" onAction="#deletenoticebuttononaction" prefHeight="30.0" prefWidth="100.0" text="Delete Notice" />
