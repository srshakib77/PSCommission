<AnchorPane prefHeight="547.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pscommission.Tasmia.adminadminCreateManageNoticesViewController">
    <children>
        <Label layoutX="370.0" layoutY="30.0" text="Create/Manage Notices">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="80.0" text="Create New Notice:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="110.0" text="Notice Title:" />
        <TextField fx:id="noticetitletextfield" layoutX="130.0" layoutY="105.0" prefHeight="30.0" prefWidth="300.0" />
        <Label layoutX="450.0" layoutY="110.0" text="Category:" />
        <ComboBox fx:id="selectcatagorycombobox" layoutX="510.0" layoutY="105.0" prefHeight="30.0" prefWidth="150.0" promptText="Select category" />
        <Label layoutX="680.0" layoutY="110.0" text="Priority:" />
        <ComboBox fx:id="prioritycombobox" layoutX="730.0" layoutY="105.0" prefHeight="30.0" prefWidth="100.0" promptText="Priority" />
        <Label layoutX="50.0" layoutY="150.0" text="Notice Content:" />
