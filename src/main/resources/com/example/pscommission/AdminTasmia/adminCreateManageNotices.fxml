        <Label layoutX="50.0" layoutY="270.0" text="Publish Date:" />
        <DatePicker fx:id="publishdatetextfield" layoutX="140.0" layoutY="265.0" prefHeight="30.0" prefWidth="150.0" />
        <Label layoutX="310.0" layoutY="270.0" text="Expiry Date:" />
        <DatePicker fx:id="expirydatetextfield" layoutX="380.0" layoutY="265.0" prefHeight="30.0" prefWidth="150.0" />
        <Button layoutX="550.0" layoutY="265.0" mnemonicParsing="false" onAction="#savedraftbuttononaction" prefHeight="30.0" prefWidth="100.0" text="Save Draft" />
        <Button layoutX="670.0" layoutY="265.0" mnemonicParsing="false" onAction="#publishnoticebuttononaction" prefHeight="30.0" prefWidth="100.0" text="Publish Notice" />
