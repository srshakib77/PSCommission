<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.ExamCoordinatorDashboardController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="ExamCoordinateDashboardTextField" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Exam Coordinator Dashboard" />

    <Button fx:id="btnGoal1" onAction="#PrepareExaminationScheduleOnAction" text="1. Prepare Examination Schedule" />
    <Button fx:id="btnGoal2" onAction="#CoordinateQuestionPaperOnAction" text="2. Coordinate Question Paper" />
    <Button fx:id="btnGoal3" onAction="#ManageExaminationCentersOn" text="3. Manage Examination Centers" />
    <Button fx:id="btnGoal4" onAction="#OverseeAnswerScriptCollectionOnAction" text="4. Oversee Answer Script Collection" />
    <Button fx:id="btnGoal5" onAction="#MonitorExaminerPerformanceOnAction" text="5. Monitor Examiner Performance" />
    <Button fx:id="btnGoal6" onAction="#HandleCandidateQueriesOnAction" text="6. Handle Candidate Queries" />
    <Button fx:id="btnGoal7" onAction="#GenerateExaminationReportsOnAction" text="7. Generate Examination Reports" />
    <Button fx:id="btnGoal8" onAction="#EnsureExamSecurityMeasuresOnAction" text="8. Ensure Exam Security Measures" />

    <Button fx:id="btnSignOut" onAction="#handleSignout" style="-fx-background-color: #ff4c4c; -fx-text-fill: white;" text="Sign Out" />

</VBox>
