<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.Goal2CoordinateQuestionPaperController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Title -->
    <Label fx:id="txtCoordinateQuestionPaper" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Coordinate Question Paper" />

    <!-- Step 2: Collect Question Paper Drafts -->
    <Label fx:id="txtUploadQuestionPaper" text="Upload Question Paper Draft:" />
    <TextField fx:id="txtDraftTitle" promptText="Enter draft title" />
    <Button fx:id="btnUploadDraft" onAction="#handleUploadDraft" text="Upload Draft" />

    <!-- Step 3: Send to Reviewers -->
    <Label fx:id="lblReviewStatus" style="-fx-font-style: italic;" text="Review Status: Pending" />

    <!-- Step 4: Finalize Question Papers -->
    <Label fx:id="txtFinalizeQuestionPaper" text="Finalize Question Paper:" />
    <TextArea fx:id="txtFinalPaper" prefRowCount="4" promptText="Enter final version here" />
    <Button fx:id="btnSaveFinal" onAction="#handleSaveFinalPaper" text="Save Final Paper" />

    <!-- Step 5: Distribute to Centers -->
    <Button fx:id="btnDistribute" onAction="#handleDistributePapers" text="Distribute to Exam Centers" />

    <!-- Step 6: Return to Dashboard -->
    <Button fx:id="btnReturn" onAction="#handleReturnToDashboard" style="-fx-background-color: #ccccff;" text="Return to Dashboard" />

</VBox>
