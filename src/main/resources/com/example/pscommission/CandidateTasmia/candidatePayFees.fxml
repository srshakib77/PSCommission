<AnchorPane prefHeight="547.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pscommission.Tasmia.candidatePayFeesViewController">
    <children>
        <Label layoutX="420.0" layoutY="30.0" text="Pay Fees">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="80.0" text="Pending Fee Payments:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="pendingfeepayments" layoutX="50.0" layoutY="110.0" prefHeight="150.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="examnamecol" prefWidth="250.0" text="Exam Name" />
                <TableColumn fx:id="applicationfeecol" prefWidth="120.0" text="Application Fee" />
                <TableColumn fx:id="latefeecol" prefWidth="120.0" text="Late Fee" />
                <TableColumn fx:id="totalamountcol" prefWidth="100.0" text="Total Amount" />
                <TableColumn fx:id="duedatecol" prefWidth="100.0" text="Due Date" />
                <TableColumn fx:id="statuscol" prefWidth="130.0" text="Status" />
            </columns>
        </TableView>
        <Label layoutX="50.0" layoutY="290.0" text="Payment Details:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="320.0" text="Select Exam:" />
        <ComboBox fx:id="chooseexamforpaymentcombobox" layoutX="150.0" layoutY="315.0" prefHeight="30.0" prefWidth="250.0" promptText="Choose exam for payment" />
        <Label layoutX="450.0" layoutY="320.0" text="Amount: â‚¹" />
        <TextField fx:id="amounttextfield" editable="false" layoutX="520.0" layoutY="315.0" prefHeight="30.0" prefWidth="100.0" />
        <Label layoutX="50.0" layoutY="370.0" text="Payment Method:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <RadioButton layoutX="50.0" layoutY="400.0" mnemonicParsing="false" onAction="#creditdebitcardradiobuttononaction" text="Credit/Debit Card">
            <toggleGroup>
                <ToggleGroup fx:id="paymentMethod" />
            </toggleGroup>
        </RadioButton>
        <RadioButton layoutX="200.0" layoutY="400.0" mnemonicParsing="false" onAction="#netbankingradiobuttononaction" text="Net Banking" toggleGroup="$paymentMethod" />
        <RadioButton layoutX="320.0" layoutY="400.0" mnemonicParsing="false" onAction="#upiradiobuttononaction" text="UPI" toggleGroup="$paymentMethod" />
        <RadioButton layoutX="400.0" layoutY="400.0" mnemonicParsing="false" onAction="#walletradiobuttononaction" text="Wallet" toggleGroup="$paymentMethod" />
        <Button layoutX="50.0" layoutY="450.0" mnemonicParsing="false" onAction="#proceedtopaybuttononaction" prefHeight="35.0" prefWidth="120.0" text="Proceed to Pay" />
        <Button layoutX="200.0" layoutY="450.0" mnemonicParsing="false" onAction="#paymenthistorybuttononaction" prefHeight="35.0" prefWidth="120.0" text="Payment History" />
        <Button layoutX="350.0" layoutY="450.0" mnemonicParsing="false" onAction="#downloadrecepitbuttononaction" prefHeight="35.0" prefWidth="120.0" text="Download Receipt" />
    </children>
</AnchorPane>
