<AnchorPane prefHeight="547.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pscommission.Tasmia.candidatePrintCertificateViewController">
    <children>
        <Label layoutX="390.0" layoutY="30.0" text="Print Certificate">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="80.0" text="Search Certificate:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label layoutX="50.0" layoutY="110.0" text="Certificate ID:" />
        <TextField fx:id="certificateidtextfield" layoutX="150.0" layoutY="105.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter certificate ID" />
        <Label layoutX="370.0" layoutY="110.0" text="Exam Name:" />
        <TextField fx:id="examnametextfield" layoutX="450.0" layoutY="105.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter exam name" />
        <Button fx:id="searchbuttononaction" layoutX="670.0" layoutY="105.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" text="Search" />
        <Label layoutX="50.0" layoutY="160.0" text="Available Certificates:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="availablecertificatestableview" layoutX="50.0" layoutY="190.0" prefHeight="250.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="examnamecol" prefWidth="200.0" text="Exam Name" />
                <TableColumn fx:id="certificateidcol" prefWidth="150.0" text="Certificate ID" />
                <TableColumn fx:id="issuedatecol" prefWidth="120.0" text="Issue Date" />
                <TableColumn fx:id="gradescorecol" prefWidth="100.0" text="Grade/Score" />
                <TableColumn fx:id="validitycol" prefWidth="120.0" text="Validity" />
                <TableColumn fx:id="statuscol" prefWidth="130.0" text="Status" />
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="460.0" mnemonicParsing="false" onAction="#downloadcertificatebuttononaction" prefHeight="35.0" prefWidth="120.0" text="Download Certificate" />
        <Button layoutX="190.0" layoutY="460.0" mnemonicParsing="false" onAction="#printcertificatebuttononaction" prefHeight="35.0" prefWidth="120.0" text="Print Certificate" />
        <Button layoutX="330.0" layoutY="460.0" mnemonicParsing="false" onAction="#verifycertificatebuttononaction" prefHeight="35.0" prefWidth="120.0" text="Verify Certificate" />
        <Button layoutX="470.0" layoutY="460.0" mnemonicParsing="false" onAction="#sharecertificatebuttononaction" prefHeight="35.0" prefWidth="120.0" text="Share Certificate" />
        <Button layoutX="610.0" layoutY="460.0" mnemonicParsing="false" onAction="#requestduplicatebuttononaction" prefHeight="35.0" prefWidth="120.0" text="Request Duplicate" />
        <Label layoutX="50.0" layoutY="510.0" text="Note: Digital certificates are available for download immediately after result publication.">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
