<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="547.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pscommission.Tasmia.candidateDownloadAdmitCardViewController">
    <children>
        <Label layoutX="370.0" layoutY="30.0" text="Download Admit Card">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="22.0" layoutY="80.0" text="Search by Application Number:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="applicationnumbertextfield" layoutX="250.0" layoutY="75.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter application number" />
        <Button layoutX="470.0" layoutY="75.0" mnemonicParsing="false" onAction="#searchbuttononaction" prefHeight="30.0" prefWidth="80.0" text="Search" />
        <Label layoutX="50.0" layoutY="130.0" text="Available Admit Cards:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TableView fx:id="availableadmitcardstableview" layoutX="50.0" layoutY="160.0" prefHeight="280.0" prefWidth="820.0">
            <columns>
                <TableColumn fx:id="examnamecol" prefWidth="200.0" text="Exam Name" />
                <TableColumn fx:id="applicationnumbercol" prefWidth="150.0" text="Application Number" />
                <TableColumn fx:id="examdatecol" prefWidth="120.0" text="Exam Date" />
                <TableColumn fx:id="examtimecol" prefWidth="100.0" text="Exam Time" />
                <TableColumn fx:id="examcentercol" prefWidth="150.0" text="Exam Center" />
                <TableColumn fx:id="statuscol" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>
        <Button layoutX="50.0" layoutY="460.0" mnemonicParsing="false" onAction="#downloadadmitcardbuttononaction" prefHeight="35.0" prefWidth="150.0" text="Download Admit Card" />
        <Button layoutX="220.0" layoutY="460.0" mnemonicParsing="false" onAction="#printadmitcardbuttononaction" prefHeight="35.0" prefWidth="120.0" text="Print Admit Card" />
        <Button layoutX="360.0" layoutY="460.0" mnemonicParsing="false" onAction="#viewdetailsbuttononaction" prefHeight="35.0" prefWidth="120.0" text="View Details" />
        <Button layoutX="500.0" layoutY="460.0" mnemonicParsing="false" onAction="#refreshlistbuttononaction" prefHeight="35.0" prefWidth="120.0" text="Refresh List" />
        <Label layoutX="50.0" layoutY="510.0" text="Note: Admit cards are available 7 days before the exam date.">
            <font>
                <Font size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
